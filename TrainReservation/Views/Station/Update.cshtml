@model TrainReservation.Models.Station

<form method="post" asp-controller="Station" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3" style="margin: 0 auto">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3" style="margin: auto">Do you really want to update this station?</h2>
        </div>
        <div class="row" style="margin: 0 auto">
            <div class="col-12">
                
                <div class="form group row">
                    <div class="col-4" style="margin:0 auto">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row" style="margin:0 auto">
                    <div class="col-8 text-center row" style="margin:0 auto">
                        <div class="col p-3" style="margin:0 auto">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col p-3" style="margin:0 auto">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


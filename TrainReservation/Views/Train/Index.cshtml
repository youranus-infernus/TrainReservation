@model IEnumerable<TrainReservation.Models.Train>


<div class="container p-3">
    <h1>Trains</h1>
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">All Trains List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Train" asp-action="Create" class="btn btn-primary">Create new Train</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Train Id
                    </th>
                    <th>
                        Train Name
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var train in Model)
                {
                    <tr>  
                        <td width="35">@train.Id</td>
                        <td width="35">@train.Name</td>
                        <td width="30">
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Train" asp-action="Update" asp-route-Id="@train.Id" class="btn btn-info mx-1">Update</a>
                                <a asp-controller="Train" asp-action="Delete" asp-route-Id="@train.Id" class="btn btn-danger mx-1">Delete</a>
                                <a asp-controller="RailCar" asp-action="Index" asp-route-TrainId="@train.Id" class="btn btn-success mx-1">RailCars</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No trains created yet</p>
    }
</div>


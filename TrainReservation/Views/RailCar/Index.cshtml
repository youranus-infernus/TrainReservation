@model IList<TrainReservation.Models.RailCar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h1 class="text">Railcar List for </h1>
            <h3 class="text-primary">Train: @ViewBag.TrainName </h3>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="RailCar" asp-action="Create" asp-route-TrainId="@ViewBag.TrainId" class="btn btn-primary mt-5">Create new Railcar</a>
            <a asp-controller="Train" asp-action="Index" class="btn btn-warning mt-5">Back to Train List</a>
        </div>
    </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-bodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        RailCar Id
                    </th>
                    <th>
                        RailCar Number
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var railcar in Model)
                {
                    <tr>
                        <td width="35">@railcar.Id</td>
                        <td width="35">@railcar.RailcarNumber</td>
                        <td width="30">
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="RailCar" asp-action="Update" asp-route-Id="@railcar.Id" class="btn btn-info mx-1">Update</a>
                                <a asp-controller="RailCar" asp-action="Delete" asp-route-Id="@railcar.Id" class="btn btn-danger mx-1">Delete</a>
                                <a asp-controller="Seat" asp-action="Index" asp-route-RailCarId="@railcar.Id" asp-route-TrainName="@ViewBag.TrainName" class="btn btn-success mx-1">Seats</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No railcars created yet</p>
    }
</div>


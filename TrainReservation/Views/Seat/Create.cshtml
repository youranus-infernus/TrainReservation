@model TrainReservation.Models.Seat

<form method="post" asp-controller="Seat" asp-action="Create">
    <div class="border p-3" style="margin: 0 auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3" style="margin: auto">Add Railcar</h2>
        </div>
        <div class="row" style="margin: 0 auto">
            <div class="col-12">
                <div class="form group row">
                    <div class="col-4" style="margin: auto">
                        <label asp-for="SeatNumber"></label>
                    </div>
                    <div class="col-4" style="margin: auto">
                        <label asp-for="Price"></label>
                    </div>
                </div>

                <div class="form group row">
                    <div class="col-4" style="margin:0 auto">
                        <input asp-for="SeatNumber" class="form-control" />
                        <span asp-validation-for="SeatNumber" class="text-danger"></span>
                    </div>
                    <div class="col-4" style="margin:0 auto">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <input type="hidden" name="RailCarId" value="@ViewBag.RailCarId" />
                </div>
                <div class="form-group row" style="margin:0 auto">
                    <div class="col-8 text-center row" style="margin:0 auto">
                        <div class="col p-3" style="margin:0 auto">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col p-3" style="margin:0 auto">
                            <a asp-action="Index" asp-route-RailCarId="@ViewBag.RailCarId" asp-route-TrainName="@ViewBag.TrainName" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
